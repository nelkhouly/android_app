<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    >


    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="76dp"
        android:layout_height="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/your_logo" />


    <ImageView
        android:id="@+id/course1"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="0dp"
        android:src="@drawable/course1_image" />
    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/course1"
        android:layout_centerHorizontal="true"
        android:text="Start"
        android:layout_marginTop="25dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/start"
        android:layout_centerHorizontal="true"
        android:text="Stop"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/course1TitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Financial Planning"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/course1TitleText"
        android:layout_marginTop="10dp"
        android:text="For more details" />

    <TextView
        android:id="@+id/courseDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/course1TitleText"
        android:layout_marginStart="16dp"
        android:layout_marginTop="400dp"
        android:textColor="@color/white"
        android:layout_marginEnd="16dp"
        android:lineSpacingExtra="20dp"
        android:textSize="16dp"
        android:text="This comprehensive financial planning course is designed to equip individuals with the knowledge and skills necessary to navigate the complex landscape of personal finance." />

    <Button
        android:id="@+id/addToCartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/courseDescriptionTextView"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:onClick="addToCart"
        android:text="Add to Cart" />

    <Button
        android:id="@+id/addToFavoritesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/courseDescriptionTextView"
        android:layout_marginStart="94dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@id/addToCartButton"
        android:onClick="addToFavorites"
        android:text="Add to Favorites" />
    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/courseDescriptionTextView"
        android:layout_marginStart="7dp"
        android:layout_marginTop="80dp"
        android:layout_toEndOf="@id/addToCartButton"
        android:onClick="addToFavorites"
        android:textColor="@color/red"
        android:text="Back" />

</RelativeLayout>
